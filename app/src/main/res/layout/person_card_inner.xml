<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dip">

    <!--  ListRow Left sied Thumbnail image -->
    <LinearLayout
        android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:padding="3dip">

        <ImageView
            android:id="@+id/imageviewPhoto"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_gravity="center"
            android:src="@drawable/ic_contact" />


        <!-- Title Of Song-->
        <LinearLayout
            android:id="@+id/detail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:orientation="vertical"
            android:padding="3dip">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/person_card_realname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="realname"
                    android:textColor="#040404"
                    android:textSize="15dip"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/person_card_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="position"
                    android:textColor="#343434"
                    android:textSize="10dip"
                    android:textStyle="bold" />

            </LinearLayout>
            >


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/person_card_company"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="company"
                    android:textColor="#343434"
                    android:textSize="10dip" />

                <TextView
                    android:id="@+id/person_card_division"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="division"
                    android:textColor="#343434"
                    android:textSize="10dip" />


            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/dotted" />

            <TextView
                android:id="@+id/person_card_news_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/person_card_realname"
                android:layout_marginRight="5dip"
                android:gravity="right"
                android:text="XX-XX-XX"
                android:textColor="#10bcc9"
                android:textSize="10dip"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/person_card_news_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="news title"
                android:textColor="#444444"
                android:textSize="15dip"
                android:textStyle="bold" />

            <!-- Rightend Duration -->


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>